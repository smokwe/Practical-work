<Page x:Class="практическая_работа__6_WPF.FormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:практическая_работа__6_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FormPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBox x:Name="NameTextBox" Text="Имя" Foreground="Gray" Margin="0,0,0,10"
                     GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox x:Name="AgeTextBox" Text="Возраст" Foreground="Gray" Margin="0,0,0,10"
                 GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox x:Name="EmailTextBox" Text="Email" Foreground="Gray" Margin="0,0,0,10"
                 GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <Button x:Name="UploadPhoto" Content="Загрузить фото" Click="UploadPhoto_Click" Margin="0,0,0,10"/>
            <Button x:Name="Submit" Content="Отправить" Click="Submit_Click"/>
        </StackPanel>

    </Grid>
</Page>
