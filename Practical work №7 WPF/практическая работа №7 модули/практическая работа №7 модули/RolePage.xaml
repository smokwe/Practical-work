<Page x:Class="практическая_работа__7_модули.RolePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:практическая_работа__7_модули"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RolePage" Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <ComboBox x:Name="RoleBox" Width="150" Margin="0 0 0 5">
                <ComboBoxItem Content="Администратор" Tag="0"></ComboBoxItem>
                <ComboBoxItem Content="Менеджер" Tag="1"></ComboBoxItem>
                <ComboBoxItem Content="Пользователь" Tag="2"></ComboBoxItem>
            </ComboBox>
            <Button x:Name="RoleButton" Content="Выбрать" Click="RoleButton_Click" Margin="0 5 0 8"/>
        </StackPanel>
    </Grid>
</Page>
